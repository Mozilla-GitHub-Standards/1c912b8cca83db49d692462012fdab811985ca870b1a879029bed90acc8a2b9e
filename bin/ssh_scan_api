#!/usr/bin/env ruby
$:.unshift File.join(File.dirname(__FILE__), "../lib")
require 'ssh_scan_api'

# Hack to make development DB setup non-manual
if ENV['SSHSCANDATABASEENV'] == "development"
  `RAILS_ENV='development' RACK_ENV='development' rake db:drop || true`
  `RAILS_ENV='development' RACK_ENV='development' rake db:create`
  `RAILS_ENV='development' RACK_ENV='development' rake db:migrate`
end

SSHScan::Api.run!()